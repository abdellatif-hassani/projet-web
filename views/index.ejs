    <!-- Home section -->
    <div id="home" class="content">
      <div class="row">
        <div class="col-md-8">
          <div id="postTitles">
            <!-- <h2 class="card-title headTitle" id="titleofSection">Last posts</h2> -->
          </div> <!-- Container for displaying post titles -->
          <!-- Post Content Section -->
          <div id="postDetail" class="card">
              <div id="postContent" class="card">
                <!-- Post content will be dynamically updated here -->
              </div>
  
              <!-- Post Comments Section -->
              <div id="postComments" class="card">
                <div class="card text-dark">
                  <h4 class="mb-0 px-4 py-2 subTitle">Recent comments</h4>
                  
                  <div id="commentsContainer">
                    <!-- Post comments will be dynamically updated here -->
                  </div>

                </div>
              </div>
          </div>
        </div>
        <!-- sidebar to show categories -->
        <div class="col-md-4" id="categoriesSection">
          <div class="card">
            <div class="card-body">
              <h2 class="headTitle">Categories</h2>
              <ul class="list-group" id="categoriesList">
                
              </ul>
            </div>
          </div>
        </div>
      </div>
