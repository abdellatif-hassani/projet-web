    <!-- Section for profile editing -->
    <div id="profileEdit" class="content d-none">
      <section class="section register min-vh-10 py-4">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="pt-2 pb-4">
                    <h5 class="card-title text-center pb-0 fs-4 subTitle">Edit Your Profile</h5>
                  </div>
                  <form class="row g-3" action="/account/edir" method="post" id="EditProfileForm">
                    <div class="col-12">
                      <label for="name" class="form-label">Full Name </label>
                      <input type="hidden" name="id" class="form-control" id="idEdit">
                      <div class="input-group has-validation">
                        <input type="text" name="name" class="form-control" id="nameEdit" required>
                      </div>
                    </div>
                    <div class="col-12">
                      <label for="email" class="form-label">Email</label>
                      <div class="input-group has-validation">
                        <input type="text" name="email" class="form-control" id="emailEdit" required>
                      </div>
                    </div>
                    <div class="col-12">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" name="password" class="form-control" id="passwordEdit" required>
                    </div>

                    <div class="col-12">
                      <label for="repassword" class="form-label">Repeat Password</label>
                      <input type="password" name="repassword" class="form-control" id="repasswordEdit" required>
                    </div>

                    <div class="col-12">
                      <button class="btn btn-primary w-100" name="connexion">Edit</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>


    
    <!-- Add Post section -->
    <div id="profileAddPost" class="content d-none">
      <div class="container col-8">
        <h2>Add a Post</h2>
        <form id="addPostForm">
          <div class="mb-3">
            <label for="postTitleAdd" class="form-label">Title</label>
            <input type="text" class="form-control" id="postTitleAdd" required>
          </div>
          <div class="mb-3">
            <label for="postContentAdd" class="form-label">Content</label>
            <textarea class="form-control" id="postContentAdd" rows="4" required></textarea>
          </div>
          <div class="mb-3">
            <label for="postPhotoAdd" class="form-label">Photo</label>
            <input type="file" class="form-control" id="postPhotoAdd">
          </div>
          <button type="submit" class="btn btn-primary">Add Post</button>
        </form>
      </div>
    </div>


    <!-- User's Posts Section -->
    <div id="profileMyPosts" class="content d-none row">
        <!-- content comes from Db -->
    </div>

    <!-- Edit Post section -->
    <div id="profileEditPost" class="content d-none">
      <div class="container col-8">
        <h2>Edit Post</h2>
        <form id="editPostForm">
          <div class="mb-3">
            <input type="hidden" class="form-control" id="postIDEdit" >
            <label for="postTitleEdit" class="form-label">Title</label>
            <input type="text" class="form-control" id="postTitleEdit" required>
          </div>
          <div class="mb-3">
            <label for="postContentEdit" class="form-label">Content</label>
            <textarea class="form-control" id="postContentEdit" rows="4" required></textarea>
          </div>
          <div class="mb-3">
            <label for="postPhotoEdit" class="form-label">Photo</label>
            <input type="file" class="form-control" id="postPhotoEdit">
          </div>
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
      </div>
    </div>  



  
